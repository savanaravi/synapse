						"id": "/subscriptions/a0983b7c-3524-48c5-bf69-9f7a12c3489a/resourceGroups/Dev/providers/Microsoft.Synapse/workspaces/dev-sxc-synapse/bigDataPools/devapachepool",
						"name": "devapachepool",
						"type": "Spark",
						"endpoint": "https://dev-sxc-synapse.dev.azuresynapse.net/livyApi/versions/2019-11-01-preview/sparkPools/devapachepool",
						"auth": {
							"type": "AAD",
							"authResource": "https://dev.azuresynapse.net"
						},
						"sparkVersion": "3.3",
						"nodeCount": 3,
						"cores": 4,
						"memory": 28
					},
					"sessionKeepAliveTimeout": 30
				},
				"cells": [
					{
						"cell_type": "code",
						"metadata": {
							"microsoft": {
								"language": "python"
							},
							"collapsed": false
						},
						"source": [
							"%%pyspark\n",
							"blob_account_name = \"labstorage23\"\n",
							"blob_container_name = \"output\"\n",
							"from pyspark.sql import SparkSession\n",
							"\n",
							"sc = SparkSession.builder.getOrCreate()\n",
							"token_library = sc._jvm.com.microsoft.azure.synapse.tokenlibrary.TokenLibrary\n",
							"blob_sas_token = token_library.getConnectionString(\"synapseblob\")\n",
							"\n",
							"spark.conf.set(\n",
							"    'fs.azure.sas.%s.%s.blob.core.windows.net' % (blob_container_name, blob_account_name),\n",
							"    blob_sas_token)\n",
							"df = spark.read.load('wasbs://output@labstorage23.blob.core.windows.net/Address.csv', format='csv'\n",
							"## If header exists uncomment line below\n",
							", header=True\n",
							")\n",
							"display(df.limit(10))"
						],
						"outputs": [],
						"execution_count": 2
					}
				]
			},
